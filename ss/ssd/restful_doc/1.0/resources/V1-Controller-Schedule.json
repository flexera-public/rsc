    {
      "description": "Create a new Schedule.",
      "name": "create",
      "urls": [
        [
          "POST",
          "/api/designer/collections/:collection_id/schedules"
        ]
      ],
      "params": {
        "identity": "id",
        "dsl_compiler": "Skeletor::MediaType::DSLCompiler",
        "reference": "V1::MediaType::Schedule",
        "type": {
          "name": "Struct",
          "attributes": {
            "collection_id": {
              "required": true,
              "description": "The collection ID (currently the account ID)",
              "example_definition": "12345",
              "type": {
                "name": "String"
              }
            }
          }
        },
        "example": {
          "collection_id": "12345"
        }
      },
      "payload": {
        "identity": "id",
        "dsl_compiler": "Skeletor::MediaType::DSLCompiler",
        "reference": "V1::MediaType::Schedule",
        "type": {
          "name": "Struct",
          "attributes": {
            "name": {
              "description": "The unique name of the Schedule",
              "required": true,
              "example_definition": "Business hours",
              "type": {
                "name": "String"
              }
            },
            "description": {
              "description": "An optional description that will help users understand the purpose of the Schedule",
              "example_definition": "Weekdays from 9am to 5pm",
              "type": {
                "name": "String"
              }
            },
            "start_recurrence": {
              "description": "When to start a CloudApp",
              "required": true,
              "example_definition": "{\n  \"hour\": 8,\n  \"minute\": 0,\n  \"rule\": \"FREQ=WEEKLY;BYDAY=MO,TU,WE,TH,FR\"\n}",
              "type": {
                "name": "Service::SharedType::Recurrence"
              }
            },
            "stop_recurrence": {
              "description": "When to stop a CloudApp",
              "required": true,
              "example_definition": "{\n  \"hour\": 18,\n  \"minute\": 0,\n  \"rule\": \"FREQ=WEEKLY;BYDAY=MO,TU,WE,TH,FR\"\n}",
              "type": {
                "name": "Service::SharedType::Recurrence"
              }
            }
          }
        },
        "example": {
          "name": "Business hours",
          "description": "Weekdays from 9am to 5pm",
          "start_recurrence": {
            "hour": 8,
            "minute": 0,
            "rule": "FREQ=WEEKLY;BYDAY=MO,TU,WE,TH,FR"
          },
          "stop_recurrence": {
            "hour": 18,
            "minute": 0,
            "rule": "FREQ=WEEKLY;BYDAY=MO,TU,WE,TH,FR"
          }
        }
      },
      "responses": {
        "created": {
          "description": "The Schedule was successfully created.",
          "status": 201
        },
        "already_exists": {
          "description": "A Schedule with the same name already exists. Use \"update\" instead.",
          "status": 409
        },
        "default": {
          "description": null,
