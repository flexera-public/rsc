        "dsl_compiler": "Skeletor::MediaType::DSLCompiler",
        "reference": "V1::MediaType::Schedule",
        "type": {
          "name": "Struct",
          "attributes": {
            "collection_id": {
              "required": true,
              "description": "The collection ID (currently the account ID)",
              "example_definition": "12345",
              "type": {
                "name": "String"
              }
            }
          }
        },
        "example": {
          "collection_id": "12345"
        }
      },
      "responses": {
